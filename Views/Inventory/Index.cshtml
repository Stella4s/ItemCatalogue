@model InventoryViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <div class="row">
        <div class="col-12">
        
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <h4>Inventory</h4>
            <div class="list-group list-group-flush mimic-table table">
                <div class="mimic-headergroup">
                    <div class="mimic-row">
                        <div></div>
                        <div>
                            Item
                        </div>
                        <div>
                            Quality
                        </div>
                        <div>
                            Value
                        </div>
                    </div>
                </div>
                <div class="mimic-rowgroup">
                    @foreach (var item in Model.Inventory.InventoryItems)
                    {
                        string selectedRow = "";
                        if (Model.SelectedInvItem != null)
                        {
                            if (item.InvItemID == (int?)Model.SelectedInvItem.InvItemID)
                            {
                                selectedRow = "active";
                            }
                        }
                        <a asp-action="Index" asp-route-id="@item.InvItemID" asp-route-selectedRecipeID="" class="list-group-item list-group-item-action mimic-row @selectedRow">
                            <div><img src="@Url.Content("~/Images/" + item.BaseItem.ImageUrl)" /></div>
                            <div> @item.BaseItem.Name</div>
                            <div> @item.Quality</div>
                            <div> @item.Price.ToString("n2")</div>
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="col-4">
            <h4>Recipes</h4>
            <div class="list-group list-group-flush mimic-table table">
                <div class="mimic-headergroup">
                    <div class="mimic-row">
                        <div></div>
                        <div>
                            Item
                        </div>
                    </div>
                </div>
                <div class="mimic-rowgroup">
                    @foreach (var item in Model.RecipeItems)
                    {
                        string selectedRow = "";
                        if (Model.SelectedRecipeItem != null)
                        {
                            if (item.BaseItemID == (int?)Model.SelectedRecipeItem.BaseItemID)
                            {
                                selectedRow = "active";
                            }
                        }
                        <a asp-action="Index" asp-route-id="" asp-route-selectedRecipeID="@item.BaseItemID" class="list-group-item list-group-item-action mimic-row @selectedRow">
                            <div><img src="@Url.Content("~/Images/" + item.ImageUrl)" /></div>
                            <div> @item.Name</div>
                        </a>
                    }
                </div>
            </div>
        </div>


        <div class="col-3">
            <div class="col">
                @if (Model.SelectedInvItem != null)
                {
                    <partial name="_ItemDetailCard" model="@Model.SelectedInvItem.BaseItem" />
                }
                @if (Model.SelectedRecipeItem != null)
                {
                    <partial name="_RecipeDetailCard" model="@Model.SelectedRecipeItem" />
                }
            </div>
            <div class="w-100"></div>
            <div class="col">
                <div class="d-block">
                    @if (Model.SelectedInvItem != null)
                    {
                        <partial name="_InvItemRemoveFromInventoryBtn" model="@Model.SelectedInvItem.InvItemID" />
                        <partial name="_BaseItemRemoveFromInventoryBtn" model="@Model.SelectedInvItem.BaseItemID" />
                    }
                </div>
            </div>
        </div>
    </div>


</div>